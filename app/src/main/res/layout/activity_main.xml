<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.agdroid.calculatordemo.MainActivity">

    <fragment
        android:id="@+id/frag_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.agdroid.calculatordemo.DisplayFragment"
        tools:layout="@layout/fragment_display"
        />

    <fragment
        android:id="@+id/frag_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.agdroid.calculatordemo.InputFragment"
        tools:layout="@layout/fragment_input" />

</LinearLayout>
